{
  "name": "portfolio-site",
  "version": "1.0.0",
  "description": "Full-stack portfolio website with React frontend and Node.js backend",
  "main": "backend/src/app.js",
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "build-frontend": "cd frontend && npm run build",
    "start-backend": "cd backend && npm start",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "build": "npm run install-all && npm run build-frontend",
    "start": "npm run start-backend",
    "postinstall": "npm run install-all"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url-here"
  },
  "keywords": ["portfolio", "react", "nodejs", "express", "mongodb"],
  "author": "Lucas Froeschner",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}